  <div class="container" style="margin-top:30px;">
    <div class="row g-0">
      <div class="cont col-lg-6 mb-5 mt-5 p-5">
        <h2 class="text-center h2">Register</h2>
        <form action="/register" method="post">
          <!-- <%= JSON.stringify(errorMsg)%> -->
            <div class="form-group my-2">
                <label for="exampleInputName">Name</label>
                <input type="text" class="form-control"placeholder="Enter name" name="name">
                <%for(let error of errorMsg ){
                  if(error.path === "name"){%>
                    <small style="color:red"><%= error.msg %></small>
                 <% }
                }%>
         
              </div>
              <div class="form-group my-2">
                <label for="exampleInputName">Email</label>
                <input type="email" class="form-control"placeholder="Enter email" name="email">
                <%for(let error of errorMsg ){
                  if(error.path === "email"){%>
                    <small style="color:red"><%= error.msg %></small>
                 <% }
                }%>
              </div>
              <div class="form-group my-2">
                <label for="exampleInputName">Phone Number</label>
                <input type="number" class="form-control"placeholder="Enter Phone" name="phone">
                <%for(let error of errorMsg ){
                  if(error.path === "phone"){%>
                    <small style="color:red"><%= error.msg %></small>
                 <% }
                }%>
              </div>
              <div class="form-group my-2">
                <label for="exampleInputName">Password</label>
                <i class="fas fa-eye" id="show"></i>
                <input type="password" class="form-control"placeholder="Enter name" name="password" id="pawd">
                <%for(let error of errorMsg ){
                  if(error.path === "password"){%>
                    <small style="color:red"><%= error.msg %></small>
                 <% }
                }%>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked"/>
                <label class="form-check-label" for="flexCheckChecked">Remember Me</label>
              </div>
             <div class="text-center"><small >Subscribe to our</small><small style="color: red;"> newsletter</small></div>
             
              <div class="text-center my-3">
                <button type="submit" class="btn w-75" id="play">Sign Up</button>
              </div>
        </form>
      </div>
      <div class="col-lg-6 wave">
      <img src="/images/user.webp" alt="">
      </div>
     
    </div>
   
 </div>









  <script>
    let icon = document.getElementById('show')
    let pwd = document.getElementById('pawd')
     
    icon.addEventListener('click',clickMe)
    function clickMe(e){
        e.preventDefault()
        if(pwd.getAttribute('type') == "password"){
            pwd.setAttribute('type','text')
        }else{
         pwd.setAttribute('type','password')
      }
    }
  </script>  

<%-include('../includes/footer') %>
</body>
</html>